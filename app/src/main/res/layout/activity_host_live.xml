<?xml version="1.0" encoding="utf-8"?>
<dragonlive.cwl.com.dragonlive.widget.SizeChangeRelative xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/host_live_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <com.tencent.ilivesdk.view.AVRootView
        android:id="@+id/av_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />
    <dragonlive.cwl.com.dragonlive.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_view">
    </dragonlive.cwl.com.dragonlive.view.TitleView>
    <dragonlive.cwl.com.dragonlive.view.BottomControlView
        android:id="@+id/control_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

    </dragonlive.cwl.com.dragonlive.view.BottomControlView>
    <dragonlive.cwl.com.dragonlive.view.ChatView
        android:id="@+id/chat_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ></dragonlive.cwl.com.dragonlive.view.ChatView>
    <LinearLayout
        android:id="@+id/chat_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/chat_view"
        android:orientation="horizontal">

        <dragonlive.cwl.com.dragonlive.view.ChatMsgListView
            android:id="@+id/chat_list"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="2"
           />

        <View
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1" />
    </LinearLayout>
    <dragonlive.cwl.com.dragonlive.view.DanmuView
        android:id="@+id/danmu_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/chat_list">

    </dragonlive.cwl.com.dragonlive.view.DanmuView>

     <tyrantgit.widget.HeartLayout
         android:id="@+id/heart_layout"
         android:layout_width="100dp"
         android:layout_height="match_parent"
        android:layout_alignParentRight="true"
         android:layout_above="@+id/control_view">
         <ImageView
             android:id="@+id/heart_view"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_alignParentBottom="true"
             android:background="@drawable/redheart"
              android:layout_marginLeft="52dp"
             android:layout_marginBottom="2dp"
             />
         <ImageView
             android:id="@+id/share_room"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_marginLeft="52dp"
             android:layout_marginBottom="15dp"
             android:layout_above="@+id/heart_view"
             android:background="@drawable/share_room"
             />
     </tyrantgit.widget.HeartLayout>
    <dragonlive.cwl.com.dragonlive.view.GiftRepeatView
        android:id="@+id/gift_repeat_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </dragonlive.cwl.com.dragonlive.view.GiftRepeatView>
    <dragonlive.cwl.com.dragonlive.view.GiftFullView
        android:id="@+id/parche_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </dragonlive.cwl.com.dragonlive.view.GiftFullView>
    <dragonlive.cwl.com.dragonlive.view.VipEnterView
        android:id="@+id/vip_center_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chat_list_view">

    </dragonlive.cwl.com.dragonlive.view.VipEnterView>
</dragonlive.cwl.com.dragonlive.widget.SizeChangeRelative>
